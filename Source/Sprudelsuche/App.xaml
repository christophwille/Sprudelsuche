<Application
    x:Class="Sprudelsuche.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sprudelsuche">
    <!-- RequestedTheme="Light" -->  
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
                <ResourceDictionary Source="Assets/SprudelStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <x:String x:Key="AppName">Sprudelsuche</x:String>
            
            <Color x:Key="AppBackgroundColor">#3599C2</Color>
            <SolidColorBrush x:Name="AppBackgroundColorBrush">
                <SolidColorBrush.Color>
                    <StaticResource ResourceKey="AppBackgroundColor" />
                </SolidColorBrush.Color>
            </SolidColorBrush>
        
        </ResourceDictionary>
    </Application.Resources>
</Application>
